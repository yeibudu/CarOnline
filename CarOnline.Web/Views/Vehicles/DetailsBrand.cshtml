@model CarOnline.Web.Models.Vehicle

@{
    ViewData["Title"] = "DetailsBrand";
}

<h1>Vehicles</h1>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
<link rel="stylesheet" href="~/lib/Font-Awesome/css/regular.min.css">
<link rel="stylesheet" href="~/lib/Font-Awesome/css/solid.min.css">

<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Plate)
        </dt>
        <dd>
            @Html.DisplayNameFor(model => model.Model)
        </dd>
         <dt>
            @Html.DisplayNameFor(model => model.Doors)
        </dt>
        <dd>
            @Html.DisplayNameFor(model => model.Type)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Create" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-plus"></i>Vehicle</a>
     <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i>Edit</a>  
    <a asp-action="BrandsIndex"  class="btn btn-success">Back to List</a>
</div>

<h1>Details</h1>

<div class="row"> 
    <div class="col-md-12"> 
        <div class="panel panel-default"> 
            <div class="panel-heading"> 
                <h3 class="panel-title">Vehicles</h3>
            </div> 
            <div class="panel-body"> 
                <table class="table table-hover table-responsive table-striped" id="MyTable"> 
                    <thead> 
                        <tr> 
                            <th> 
                                @Html.DisplayNameFor(model => model.Brands.FirstOrDefault().Name) 
                            </th> 
                       </tr> 
                    </thead> 
                    <tbody>
                        @foreach (var item in Model.Brands)
                        {
                            <tr>
                                <td> 
                                    @Html.DisplayFor(modelItem => item.Name) 
                                </td>
                                <td> 
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-
                                        warning"><i class="fas fa-edit"></i></a> 
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-
                                        info"><i class="fas fa-align-justify"i></a>
                                    <button data-id="@item.Id" class="btn btn-danger deleteItem"
                                        data-toggle="modal" data-target="#deleteDialog"><i class="fas fa-trash"></i>
                                    </button>
                                </td> 
                            </tr>
                        }
                    </tbody> 
                </table> 
            </div> 
         </div> 
     </div> 
</div>

<partial name="_DeleteDialog" />

@section Scripts { 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script> 
    <script src="/js/deleteDialog.js"></script>

<script type="text/javascript"> 
    $(document).ready(function () { 
        $('#MyTable').DataTable();
